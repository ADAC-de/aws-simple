{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2017",
    "esModuleInterop": true,
    "outDir": "lib",
    "declaration": true,
    "jsx": "react",
    "incremental": true,
    "pretty": true
  },
  "include": ["src/**/*", "types/**/*"]
}

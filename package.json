    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.17.3",
    "get-port": "^6.1.2",
    "lambda-local": "^2.0.1",
    "mime-types": "^2.1.34",
    "mkdirp": "^1.0.4",
    "prompts": "^2.4.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@onecfg/standard": "^2.2.0",
    "@swc/core": "^1.2.151",
    "@swc/jest": "^0.2.20",

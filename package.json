{
  "name": "aws-simple",
  "version": "16.0.0",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile format:check lint test",
    "compile": "tsc --incremental --pretty",
    "postcompile": "chmod +x lib/index.js",
    "format": "prettier --write .",

{
  "name": "aws-simple",
  "version": "17.1.0",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile compile:request-authorizer format:check lint test",
    "compile": "tsc --incremental --pretty",
    "postcompile": "chmod +x lib/index.js",
    "compile:request-authorizer": "tsc --pretty --project src/cdk/request-authorizer",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepare": "node onecfg.js",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node ./lib/index.js",
    "test": "jest --silent"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.82.0",
    "@aws-sdk/client-cloudformation": "^3.82.0",
    "@aws-sdk/client-s3": "^3.83.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "get-port": "^6.1.2",
    "lambda-local": "^2.0.2",
    "mime-types": "^2.1.35",
    "mkdirp": "^1.0.4",
    "prompts": "^2.4.2",
    "superstruct": "^0.15.4",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@onecfg/standard": "^4.0.0",
    "@swc/core": "^1.2.176",
    "@swc/jest": "^0.2.20",
    "@types/aws-lambda": "^8.10.95",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/mime-types": "^2.1.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.31",
    "@types/prompts": "^2.0.14",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^2.2.1",
    "jest": "^28.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.15.0"
  }
}

{
  "name": "@adac-de/aws-simple",
  "version": "17.3.3",
  "description": "Production-ready AWS website deployment with minimal configuration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ADAC-de/aws-simple.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "types": "./lib/index.d.ts",
  "bin": {
    "aws-simple": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "node onecfg.js",
    "ci": "run-p compile:check compile:emit format:check lint test compile:emit:request-authorizer",
    "compile:check": "tsc --pretty",
    "compile:emit": "tsc --pretty --project tsconfig.emit.json",
    "postcompile:emit": "chmod +x lib/index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --silent --passWithNoTests",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "compile:emit:request-authorizer": "tsc --pretty --project src/cdk/request-authorizer",
    "start": "node ./lib/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.116.0",
    "@aws-sdk/client-cloudformation": "^3.112.0",
    "@aws-sdk/client-s3": "^3.117.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "get-port": "^6.1.2",
    "lambda-local": "^2.0.2",
    "mime-types": "^2.1.35",
    "mkdirp": "^1.0.4",
    "prompts": "^2.4.2",
    "superstruct": "^0.15.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@onecfg/standard": "^6.4.0",
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/aws-lambda": "^8.10.101",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/mime-types": "^2.1.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.0.0",
    "@types/prompts": "^2.0.14",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^2.2.1",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.24.0"
  }
}
